{% import "snippets/blogsidebar.njk" as sidebar%}
<!doctype html>
<html class="h-100" lang="{{ metadata.language }}" data-bs-theme="{{ global.colorMode }}">

  <head>
    {% include 'snippets/head.njk' %}
  </head>

  <body>

    {% include 'snippets/navbar.njk' %}

    <main class="container">
          <div class="row d-flex justify-content-center">
            <div class="col-12">
              <div class="text-center ">
                <header >
                  <h1 class="display-3">{{ bigtitle }}</h1>
                </header>
            </div>
          </div>
    </main>

    <main class="container">
      <div class="row d-flex justify-content-between">
        <div class="col-12 col-md-7">
          <header class="py-vh-2">
              <h1>{{ title }}</h1>
          </header>
          {{ content | safe }}
        </div>
        <div class="col-12 col-md-4">
          {{ sidebar.Sidebar(collections | getData) }}
        </div>

      </div>
    </main>

    <footer class="container">
      {% include 'snippets/footer.njk' %}
    </footer>

  </body>

</html>
